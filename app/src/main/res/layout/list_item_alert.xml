<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_alert_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_alert_list_item"
        android:id="@+id/textViewAlertListItem"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAlertListItemLiteral"
        android:src="@android:drawable/ic_secure"
        android:contentDescription="@string/text_image_literal_search"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/buttonDeleteAlertListItem"
        android:layout_toLeftOf="@+id/buttonDeleteAlertListItem"/>

    <ImageButton
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="@string/text_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDeleteAlertListItem"
        android:layout_alignRight="@+id/textViewAlertListItem"
        android:layout_alignEnd="@+id/textViewAlertListItem"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>